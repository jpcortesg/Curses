<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/add" method="POST" class="">
            <h2 class="text-center pb-3">Add</h2>
            <div class="form-group">
              <input autocomplete="off" type="text" class="form-control" name="tite" placeholder="title" autofocus>
            </div>
            <div class="form-group">
              <input autocomplete="off" type="url" class="form-control" name="url" placeholder="url">
            </div>
            <div class="form-group">
              <textarea autocomplete="off" name="description" rows="2" class="form-control" placeholder="description"></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>