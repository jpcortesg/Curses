<div class="container p-4">
  {{#if links}}
  <div class="row mb-4">
    <div class="col-md-5 mx-auto">
      <div class="card card-body text-center px-5">
        <a href="/links/add" class="btn btn-primary">Create New!</a>
      </div>
    </div>
  </div>
  {{/if}}
  <div class="row">
    {{#each links}}
    <div class="col-md-3">
      <div class="card text-center alert-dark mb-3">
        <div class="card-body">
          <a href="{{ url }}" target="_blank">
            <h3 class="card-title text-uppercase"> {{ title }} </h3>
          </a>
          <p class="m-2"> {{ description }} </p>
          <p> {{ timeago created_ad }} </p>
          <a href="/links/delete/{{id}}" class="btn btn-danger">Delete Link</a>
          <a href="/links/edit/{{id}}" class="btn btn-primary">Edit Link</a>
        </div>
      </div>
    </div>
    {{else}}
    <div class="col-md-4 mx-auto">
      <div class="card card-body text-center alert alert-primary">
        <p>There are not links saved yet</p>
        <a href="/links/add" class="btn btn-outline-primary">Create one!</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>